// addition of 2 matrices
#include<iostream>
using namespace std;

int main()
{
    int i,j,a,b;
    int arr1[3][3];
    int arr2[3][3];
    // Input
    cout << "Enter the elements of the first 3x3 matrix :\n";
    for(int i = 0; i < 3; i++)
    {
        for( j = 0; j < 3; j++)
        {
            cin >> arr1[i][j];
        }
    }

    // Output
    cout << "\nThe matrix is:\n";
    for(i = 0; i < 3; i++)
    {
        for(int j = 0; j < 3; j++)
        {
            cout << arr1[i][j] << " ";
        }
        cout << endl;
    }

    cout << "Enter the elements of the 3x3 matrix:\n";
    for( a = 0; a < 3; a++)
    {
        for( b = 0; b < 3; b++)
        {
            cin >> arr2[a][b];
        }
    }

    // Output
    cout << "\nThe matrix is:\n";
    for( a = 0; a < 3; a++)
    {
        for(b = 0; b < 3; b++)
        {
            cout << arr2[a][b] << " ";
        }
        cout << endl;
    }

    if( i==a, j==b)
    {
        cout<<"The sum of the matrices is : "<< arr1[i][j]+arr2[a][b];
    }

}

/* output for this code

